{
  "name": "auto-pilot-bdd",
  "version": "1.0.1",
  "description": "Execute Gherkin scenarios in Jest",
  "author": "Ravichandran JV",
  "scripts": {
    "build": "tsc",
    "jest": "jest --verbose",
    "test": "npm run build & jest --color"
  },
  "keywords": [
    "jest",
    "gherkin",
    "cucumber"
  ],
  "devDependencies": {
    "babel-jest": "^24.1.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.10.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/jest": "^24.0.7",
    "@types/node": "^11.9.4",
    "callsites": "^3.0.0",
    "gherkin": "^5.0.0",
    "jest": "^24.1.0",
    "jest-cucumber": "^2.0.11",
    "request": "^2.88.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.steps.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
